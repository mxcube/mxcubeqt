<equipment class="BeamSlitBox">
    <focModeEq>/eh1/beamFocusing</focModeEq>	
    <shape>rectangle</shape>
    <focModes>['Unfocused', 'Horizontal', 'Vertical', 'Double']</focModes>	
    <gapH>
       <modesAllowed>['Unfocused', 'Vertical']</modesAllowed>
       <stepSize>0.0050</stepSize>
       <minGap>0.005</minGap>
       <maxGap>0.200</maxGap>
       <updateTolerance>0.0005</updateTolerance>
       <motors>
	  <motor>
 	    <motorName>Out</motorName>
            <motorsGroup>attocubeMotors</motorsGroup>
	    <reference>1103570</reference>
	  </motor>
          <motor>
 	    <motorName>In</motorName>
            <motorsGroup>attocubeMotors</motorsGroup>
	    <reference>-749599</reference>	          
	  </motor>
       </motors>
    </gapH>
    <gapV>
       <modesAllowed>['Unfocused', 'Horizontal']</modesAllowed>
       <stepSize>0.0050</stepSize>
       <minGap>0.005</minGap>
       <maxGap>1.10</maxGap>
       <updateTolerance>0.0005</updateTolerance>
       <motors>
	  <motor>
	    <motorName>Top</motorName>
            <motorsGroup>attocubeMotors</motorsGroup>
            <reference>94264</reference>
	  </motor>
	  <motor>
 	    <motorName>But</motorName>
            <motorsGroup>attocubeMotors</motorsGroup>	          
            <reference>16260</reference>
	  </motor>
       </motors>
    </gapV>  
    <device hwrid="/eh1/attocubeMotors/attoGroup" role="attocubeMotors"/> 
</equipment>
