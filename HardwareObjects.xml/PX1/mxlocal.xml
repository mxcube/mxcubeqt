<?xml version="1.0" encoding="iso-8859-1"?>
<beamline_pars>
    <BEAMLINE_PARS>
        <synchrotron_name>Soleil</synchrotron_name>
        <beamline_name>Proxima1</beamline_name>
        <undulator>
            <type>u20</type>
        </undulator>
    </BEAMLINE_PARS>
    <COLLECT_PARS>
        <escan_dir>/tmp/Escans</escan_dir> <!--  /data/proxima1-soleil/temp/Escans</escan_dir> change! -->
        <escan_prefix>eprefix</escan_prefix> <!-- change! -->
        <fileinfo>
            <directory>/tmp/images</directory> <!-- /data/proxima1-soleil/temp/images change! -->
            <prefix>img_</prefix>
            <run_number>1</run_number>
        </fileinfo>
        <current_filename>test</current_filename>
        <dark>1</dark>
    </COLLECT_PARS>
    <SPEC_PARS>
        <phi>phi</phi>
        <wavmot>lambda</wavmot>
        <emot>energy</emot>
        <detdistmot>distccd</detdistmot> <!-- ? -->
        <beam>
           <ax>0.002513</ax>
           <ay>0.002945</ay>
           <bx>1180.79</bx>
           <by>1313.82</by>
        </beam>
        <detector>
            <binning>1</binning>
            <save_raw>0</save_raw>
            <no_xform>0</no_xform>
            <UseDefaultDarkTime>1</UseDefaultDarkTime>
        </detector>
    </SPEC_PARS>
    <BCM_PARS>
        <detector>
            <type>Pilatus</type>                
        </detector>
            <detector_manufacturer>DECTRIS</detector_manufacturer>   
            <detector_type>Pilatus</detector_type>                
            <detector_model>6M_F</detector_model>
            <detector_px>0.172</detector_px>
            <detector_py>0.172</detector_py>
            <cansum>no</cansum>
        <detector_radius>211.8</detector_radius> <!--might need to be changed to 157.5? -->
        <monochromator>Si(111)</monochromator>
        <FileSuffix>cbf</FileSuffix>
        <polarisation>0.99</polarisation>
        <minimum_exposure_time>0.05</minimum_exposure_time>
        <default_exposure_time>0.10</default_exposure_time>
        <minimum_phi_speed>0.1</minimum_phi_speed>
        <minimum_phi_oscillation>0.01</minimum_phi_oscillation>
        <maximum_phi_speed>15</maximum_phi_speed>
        <maximum_radiation_exposure>4000</maximum_radiation_exposure>
        <hutch>PROXIMA1</hutch>
    </BCM_PARS>
    <VALIDATE_PARS>
        <exposure_time>0.05,100</exposure_time>
        <start_angle>-1000,1000</start_angle>
        <range>0.0,10</range>
        <number_of_passes>1,10</number_of_passes>
        <start_image_number>0,10000</start_image_number>
        <run_number>0,10000</run_number>
        <overlap>-90,0.99</overlap>
        <number_of_images>1,10000</number_of_images>
    </VALIDATE_PARS>
    <EXTRAVALIDATE_PARS>
        <rotation_speed>0.1,100</rotation_speed>
    </EXTRAVALIDATE_PARS>
    <INHOUSE_USERS>
        <proposal>
            <code>opd</code>
            <number>14</number>
        </proposal>
    </INHOUSE_USERS>
</beamline_pars>
